<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ScrollViewPictureInsight" parent="MatchParent">
        <item name="android:background">@color/black</item>
    </style>

    <style name="NamePictureInsight" parent="MatchParentWrapContent">
        <item name="android:padding">@dimen/layout_margin</item>

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/soft_grey</item>
        <item name="android:textSize">@dimen/headline</item>
    </style>

    <style name="LatestUpdatePictureInsight" parent="MatchParentWrapContent">
        <item name="android:padding">10dp</item>

        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/soft_grey</item>
        <item name="android:textSize">@dimen/subhead</item>
    </style>
</resources>